require "rubygems"
require "tmpdir"

require "bundler/setup"
require "jekyll"


# Change your GitHub reponame
GITHUB_REPONAME = "tumblr/colossus"


namespace :site do
  desc "Generate blog files"
  task :generate do
    Jekyll::Site.new(Jekyll.configuration({
      "source"      => ".",
      "destination" => "_site"
    })).process
  end

  # NOT using generate because it screws up the plugins, just run build manually
  desc "Generate and publish blog to gh-pages"
  task :publish do
    Dir.mktmpdir do |tmp|
      system "jekyll build"
      cp_r "_site/.", tmp

      pwd = Dir.pwd
      Dir.chdir tmp

      system "git init"
      system "git checkout -b update"
      system "git add ."
      message = "Site updated at #{Time.now.utc}"
      system "git commit -m #{message.inspect}"
      system "git remote add origin git@github.com:#{GITHUB_REPONAME}.git"
      system "git fetch origin gh-pages"
      system "git checkout gh-pages"
      system "git checkout update"
      system "git merge --allow-unrelated-histories -s ours gh-pages"
      system "git checkout gh-pages"
      system "git merge --allow-unrelated-histories update -m #{message.inspect}"
      system "git push origin"

      Dir.chdir pwd
    end
  end
end
